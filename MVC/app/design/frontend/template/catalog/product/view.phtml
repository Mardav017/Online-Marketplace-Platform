<script>
    $('#form').on('submit', function (e) {
        e.preventDefault();
        var form = $(this);
        $.ajax({
            type: form.attr('method'),
            url: form.attr('action'),
            data: form.serialize(),
            success: function(response) {
                $('#toast-simple').fadeIn();
                setTimeout(function() {
                    $('#toast-simple').fadeOut();
                }, 3000);
                
            },
            error: function(xhr, status, error) {
                console.error(xhr.responseText);
            }
        });        
    });
    
</script>